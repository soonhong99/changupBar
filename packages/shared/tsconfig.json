// packages/shared/tsconfig.json
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext", // ⬅️ 'ESNext'에서 'NodeNext'로 수정
    "moduleResolution": "nodenext",
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
// packages/api/tsconfig.json
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext", // ⬅️ 'ESNext'에서 'NodeNext'로 수정
    "moduleResolution": "NodeNext", // ⬅️ 'node'에서 'NodeNext'로 수정
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../shared" }
  ]
}